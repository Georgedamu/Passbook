<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="@dimen/navigation_menu_height"
    android:paddingTop="8dp"
    android:orientation="horizontal">
    
    <TextView android:id="@+id/menu_text"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="?attr/navigationMenuSeparator"
        android:gravity="center_vertical"
        android:textAppearance="@style/TextAppearance.AppCompat.Menu"
        android:textStyle="bold"
        android:textColor="@color/text_black_sec"
        android:textAllCaps="true"
        android:paddingLeft="@dimen/navigation_icon_margin"
/>
   
</LinearLayout>
