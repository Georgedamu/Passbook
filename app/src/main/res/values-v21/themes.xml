<?xml version="1.0" encoding="utf-8"?>
<resources>
    <style name="AppDark" parent="Theme.AppCompat.NoActionBar">
        <item name="android:windowTranslucentStatus">true</item>
        <item name="android:windowContentTransitions">true</item>
        <item name="android:fragmentEnterTransition">@android:transition/explode</item>
        <item name="android:fragmentExitTransition">@android:transition/explode</item>
        <item name="android:fragmentSharedElementEnterTransition">@transition/change_bounds</item>
        <item name="android:fragmentSharedElementReturnTransition">@transition/change_bounds</item>
        <item name="listItemBackground">@drawable/list_item_mtrl</item>
        <item name="cardViewDrawable">@drawable/cardview</item>
        <!-- Above items should share the same value in dark and light themes
             Below are common values but differ in dark and light themes-->
        <item name="iconColorNormal">@color/text_white_sec</item>
        <item name="textColorNormal">@color/text_white_std</item>
        <item name="navigationMenuSeparator">@drawable/div</item>
        <item name="android:dialogTheme">@style/DialogTheme.Dark</item>
        <item name="android:alertDialogTheme">@style/DialogTheme.Dark</item>
    </style>

    <style name="AppLight" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="android:windowTranslucentStatus">true</item>
        <item name="android:windowContentTransitions">true</item>
        <item name="android:fragmentEnterTransition">@android:transition/explode</item>
        <item name="android:fragmentExitTransition">@android:transition/explode</item>
        <item name="android:fragmentSharedElementEnterTransition">@transition/change_bounds</item>
        <item name="android:fragmentSharedElementReturnTransition">@transition/change_bounds</item>
        <item name="listItemBackground">@drawable/list_item_mtrl</item>
        <item name="cardViewDrawable">@drawable/cardview</item>
        <!-- Above items should share the same value in dark and light themes
             Below are common values but differ in dark and light themes-->
        <item name="iconColorNormal">@color/text_black_sec</item>
        <item name="textColorNormal">@color/text_black_std</item>
        <item name="navigationMenuSeparator">@drawable/div_light</item>
        <item name="android:dialogTheme">@style/DialogTheme.Light</item>
        <item name="android:alertDialogTheme">@style/DialogTheme.Light</item>
    </style>

    <style name="AppDark.Default">
        <item name="colorPrimary">@color/blue</item>
        <item name="colorAccent">@color/orange_a200</item>
        <item name="colorPrimaryDark">@color/blue_700</item>
    </style>

    <style name="AppLight.Default">
        <item name="colorPrimary">@color/blue</item>
        <item name="colorAccent">@color/orange_a200</item>
        <item name="colorPrimaryDark">@color/blue_700</item>
    </style>
</resources>